{
  "name": "desktop",
  "version": "0.0.1",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "compile": "tsup src/main.ts src/preload.ts --format cjs --out-dir dist --target node18 --clean --external electron",
    "copy:renderer": "tsx scripts/copy-renderer.ts",
    "dev": "tsx scripts/run-dev.ts",
    "build": "pnpm run compile && pnpm run copy:renderer",
    "start": "electron dist/main.js"
  },
  "dependencies": {
    "electron": "^32.2.5",
    "@bildbot/shared": "workspace:*",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "tsup": "^8.3.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
